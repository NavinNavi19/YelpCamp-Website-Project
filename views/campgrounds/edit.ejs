<% include ../partials/header %>

<div class="container">
    
    <h1 class="text-center mt-5">Edit <%= campground.name %></h1>

    <div class="row">
        
        <div style="width: 350px;margin: 25px auto;">
            
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="exampleCampgroundName1"><strong>Campground Name</strong></label>
                    <input type="text" class="form-control" id="exampleCampgroundName1" name="campground[name]" value="<%= campground.name %>" required>
                </div>
                <div class="form-group">
                    <label for="campgroundImage"><strong>Campground Image</strong></label>
                    <input type="text" class="form-control" id="campgroundImage" name="campground[image]" value="<%= campground.image %>" required>
                </div>
                <div class="form-group">
                    <label for="campgroundPrice"><strong>Campground Price</strong></label> 
                    <input type="number" class="form-control" id="campgroundPrice" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01" required>
                </div>
                <div class="form-group">
                    <label for="campgroundsLocation"><strong>Campground Location</strong></label> 
                    <input type="text" class="form-control" id="campgroundLocation" name="campground[location]" value="<%= campground.location %>" required>
                </div>
                <div class="form-group">
                    <label for="campgroundDescription"><strong>Campground Description</strong></label>
                    <input type="text" class="form-control" id="campgroundDescription" name="campground[description]" value="<%= campground.description %>" required>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
        </div>
    </div>
    <div class="text-center">
        <a href="/campgrounds" >Go Back</a>
    </div>
    
</div>



<% include ../partials/footer %>