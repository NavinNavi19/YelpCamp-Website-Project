<% include ../partials/header %>

<div class="container">
    
    <h1 class="text-center mt-5">Create a New Campground</h1>

    <div class="row">
        
        <div style="width: 350px;margin: 25px auto;">
            
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="Enter Campground Name" required>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="image" placeholder="Enter Campground Image URL" required>
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name="price" placeholder="Enter Campground Price" min="0.01" step="0.01" required>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="location" placeholder="Enter Campground Location" required>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="description" placeholder="Enter Campground Description" required>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
        </div>
    </div>
    <div class="text-center">
        <a href="/campgrounds" >Go Back</a>
    </div>
    
</div>



<% include ../partials/footer %>